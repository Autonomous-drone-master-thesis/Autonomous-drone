#:kivy 2.1.0
<MyUI>:
    video: video
    battery: battery
    wifi: wifi
    flight_time: flight_time
    video_trigger: video_trigger
    start_button: start_button
    RelativeLayout:
        orientation: 'vertical'
        Image:
            id: video
        Image:
            id: battery
            source: "icons/Battery-high.png"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0, 'top': 1}
        Button:
            id: wifi
            text: "wifi"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.1, 'top': 1}
        Button:
            id: flight_time
            text: "flight_time"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.5, 'top': 1}
        Button:
            id: video_trigger
            text: "video_trigger"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'right':1, 'top':1}
        Button:
            id: start_button
            text: "Start"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.5, 'bottom': 0}
            on_press: root.start()
