#:kivy 2.1.0
<MyUI>:
    video: video
    battery: battery
    status: status
    flight_time: flight_time
    current_speed: current_speed
    video_trigger: video_trigger
    button: button
    RelativeLayout:
        orientation: 'vertical'
        Image:
            id: video
        Label:
            id: battery
            text: "Battery: N/A"
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0, 'top': 1}
        Label:
            id: status
            text: "Status: Not connected"
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.1, 'top': 1}
        Label:
            id: flight_time
            text: "Flight time: 0:00:00.00"
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.4, 'top': 1}
        Label:
            id: current_speed
            text: "Speed: 0 m/s"
            color: 0, 0, 0, 1
            font_size: 10
            size_hint: 0.1, 0.1
            pos_hint: {'center_x': 0.6, 'top': 1}
        Button:
            id: video_trigger
            text: "video_trigger"
            font_size: 20
            size_hint: 0.1, 0.1
            pos_hint: {'right':1, 'top':1}
        Button:
            id: button
            text: "Start"
            font_size: 20
            size_hint: 0.1, 0.1
            opacity: 1
            pos_hint: {'center_x': 0.5, 'bottom': 0}
            on_press: root.button_handler()
